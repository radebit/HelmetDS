<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.radebit.project.helmetds.mapper.HCameraGroupMapper">
    
    <resultMap type="HCameraGroup" id="HCameraGroupResult">
        <result property="groupId"    column="group_id"    />
        <result property="groupName"    column="group_name"    />
    </resultMap>

    <sql id="selectHCameraGroupVo">
        select group_id, group_name from h_camera_group
    </sql>

    <select id="selectHCameraGroupList" parameterType="HCameraGroup" resultMap="HCameraGroupResult">
        <include refid="selectHCameraGroupVo"/>
        <where>  
            <if test="groupId != null "> and group_id = #{groupId}</if>
            <if test="groupName != null  and groupName != ''"> and group_name like concat('%', #{groupName}, '%')</if>
        </where>
    </select>
    
    <select id="selectHCameraGroupById" parameterType="Long" resultMap="HCameraGroupResult">
        <include refid="selectHCameraGroupVo"/>
        where group_id = #{groupId}
    </select>
        
    <insert id="insertHCameraGroup" parameterType="HCameraGroup" useGeneratedKeys="true" keyProperty="groupId">
        insert into h_camera_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupName != null  and groupName != ''">group_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="groupName != null  and groupName != ''">#{groupName},</if>
         </trim>
    </insert>

    <update id="updateHCameraGroup" parameterType="HCameraGroup">
        update h_camera_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupName != null  and groupName != ''">group_name = #{groupName},</if>
        </trim>
        where group_id = #{groupId}
    </update>

    <delete id="deleteHCameraGroupById" parameterType="Long">
        delete from h_camera_group where group_id = #{groupId}
    </delete>

    <delete id="deleteHCameraGroupByIds" parameterType="String">
        delete from h_camera_group where group_id in 
        <foreach item="groupId" collection="array" open="(" separator="," close=")">
            #{groupId}
        </foreach>
    </delete>
    
</mapper>